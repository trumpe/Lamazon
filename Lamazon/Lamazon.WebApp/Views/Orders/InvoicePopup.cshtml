@{
    string popupId = $"invoicePopup{ViewData["OrderId"]}";
    string paymentMethodId = $"IPPaymentMethod{ViewData["OrderId"]}";
    string addressId = $"IPAddress{ViewData["OrderId"]}";
    string priceId = $"IPPrice{ViewData["OrderId"]}";
}

<div id="@popupId" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Invoice</h3>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="">Payment Method</label>
                        <input class="form-control" id="@paymentMethodId" />
                    </div>
                    <div class="form-group">
                        <label for="">Address</label>
                        <input class="form-control" id="@addressId" />
                    </div>
                    <div class="form-group">
                        <label for="">Price</label>
                        <input class="form-control" id="@priceId" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>